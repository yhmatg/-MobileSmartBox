<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_logo"
        android:layout_width="@dimen/dp_114"
        android:layout_height="@dimen/dp_68"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/logo_icon" />

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="@dimen/dp_238"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/im_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_11"
        android:src="@drawable/home_title" />

    <EditText
        android:id="@+id/edit_account"
        android:layout_width="@dimen/dp_323"
        android:layout_height="@dimen/dp_49"
        android:layout_below="@+id/iv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_63"
        android:background="@drawable/account_back"
        android:hint="@string/login_hint"
        android:inputType="textNoSuggestions"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:textColorHint="#ACACAC"
        android:textSize="@dimen/sp_16" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="@dimen/dp_323"
        android:layout_height="@dimen/dp_49"
        android:layout_below="@+id/edit_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@drawable/account_back"
        android:hint="@string/user_passward"
        android:inputType="textPassword"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:textColorHint="#ACACAC"
        android:textSize="@dimen/sp_16" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_66"
        android:layout_below="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/button_back"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</RelativeLayout>